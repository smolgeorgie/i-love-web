<section class="post-block">
    <h2>Recent Posts</h2>
    <ul>
        {% for post in collections.blog | reverse | slice(0, 3) %}
        <li>
            <a href="{{ post.url }}">{{ post.data.title }}</a>
            <div class="block-image">
                <img src="{{ post.data.image }}" alt="{{ post.data.title }}" class="summary--image" width="200" height="100">
            </div>
        </li>
        {% endfor %}
    </ul>
</section>