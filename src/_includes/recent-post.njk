<section class="post-block">
    <h2>Recent Posts</h2>
    <ul>
        {% for post in collections.blog | reverse | slice(0, 3) %}
        <li>
            <a href="{{ post.url }}">{{ post.data.title }}</a>
            <span class="date">
                {{post.data.date | postDate}}
            </span>
        </li>
        {% endfor %}
    </ul>
</section>